<template name="init" onError="fault" xmlns="http://ws.apache.org/ns/synapse">
	<parameter name="clientId" description="clientId"/>
	<parameter name="clientSecret" description="clientSecret"/>
	<parameter name="refreshToken" description="refreshToken"/>
	<parameter name="accessToken" description="access token"/>
	<parameter name="name" description="Unique name of salesforce OAuth configuration name"/>
	<parameter name="instanceUrl" description="Instance URL"/>
	<sequence>
		<property name="sf_bulk_clientId" expression="$func:clientId"/>
		<property name="sf_bulk_clientSecret" expression="$func:clientSecret"/>
		<property name="sf_bulk_refreshToken" expression="$func:refreshToken"/>
		<property name="sf_bulk_accessToken" expression="$func:accessToken"/>
		<property name="sf_bulk_config_name" expression="$func:name"/>
		<property name="sf_bulk_instanceUrl" expression="$func:instanceUrl"/>
		<class name="org.wso2.carbon.esb.connector.operations.InitSalesforce" />
	</sequence>
</template>
