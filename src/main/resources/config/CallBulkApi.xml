<template name="callBulkApi" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="method" description="Call Method"/>
    <parameter name="contentType" description="Content Type"/>
    <parameter name="url" description="Endpoint URL"/>
    <sequence>
        <property name="uri.var.httpMethod" expression="$func:method"/>
        <property name="uri.var.contentType" expression="$func:contentType"/>
        <property name="uri.var.url" expression="$func:url"/>
        <property name="uri.var.accessToken" expression="get-property('sf_bulk_accessToken')"/>
        <filter source="boolean($ctx:uri.var.accessToken)" regex="true">
            <then>
                <salesforce_bulkapi_v2.callUsingAccessToken>
                    <method>{uri.var.httpMethod}</method>
                    <url>{uri.var.url}</url>
                    <contentType>{uri.var.contentType}</contentType>
                </salesforce_bulkapi_v2.callUsingAccessToken>
                <filter regex="40(?:1|3|7|9)|44(?:0|1)|45(?:1|9)|499" source="$axis2:HTTP_SC">
                    <then>
                        <salesforce_bulkapi_v2.callUsingOauth>
                            <method>{uri.var.httpMethod}</method>
                            <url>{uri.var.url}</url>
                            <contentType>{uri.var.contentType}</contentType>
                        </salesforce_bulkapi_v2.callUsingOauth>
                    </then>
                    <else/>
                </filter>
            </then>
            <else>
                <salesforce_bulkapi_v2.callUsingOauth>
                    <method>{uri.var.httpMethod}</method>
                    <url>{uri.var.url}</url>
                    <contentType>{uri.var.contentType}</contentType>
                </salesforce_bulkapi_v2.callUsingOauth>
            </else>
        </filter>
    </sequence>
</template>