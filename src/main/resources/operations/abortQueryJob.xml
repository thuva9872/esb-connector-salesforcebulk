<template xmlns="http://ws.apache.org/ns/synapse" name="abortQueryJob">
    <parameter name="queryJobId" description="Query Job ID"/>
    <sequence>
        <property name="queryJobId" expression="$func:queryJobId"/>
        <class name="org.wso2.carbon.esb.connector.operations.AbortQueryJob"/>
        <property name="uri.var.url" expression="get-property('sf_bulk_abortQueryJobUrl')"/>
        <payloadFactory media-type="json">
            <format>
                <![CDATA[{ "state" : "Aborted" }]]>
            </format>
            <args/>
        </payloadFactory>
        <salesforce_bulkapi_v2.callBulkApi>
            <method>patch</method>
            <url>{uri.var.url}</url>
            <contentType>application/json</contentType>
        </salesforce_bulkapi_v2.callBulkApi>
    </sequence>
</template>
