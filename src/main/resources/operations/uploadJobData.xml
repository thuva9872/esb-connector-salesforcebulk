<template xmlns="http://ws.apache.org/ns/synapse" name="uploadJobData">
    <parameter name="jobId" description="Job ID"/>
    <parameter name="inputData" description="Input Data"/>
    <sequence>
        <property name="jobId" expression="$func:jobId"/>
        <property name="sf_bulk_inputData" expression="$func:inputData"/>
        <class name="org.wso2.carbon.esb.connector.operations.UploadJobData"/>
        <property name="uri.var.url" expression="get-property('sf_bulk_uploadJobUrl')"/>
        <payloadFactory media-type="text">
            <format>
                $1
            </format>
            <args>
                <arg evaluator="xml" expression="$ctx:sf_bulk_inputData"/>
            </args>
        </payloadFactory>
        <salesforce_bulkapi_v2.callBulkApi>
            <method>put</method>
            <url>{uri.var.url}</url>
            <contentType>text/csv</contentType>
        </salesforce_bulkapi_v2.callBulkApi>
    </sequence>
</template>
