<template xmlns="http://ws.apache.org/ns/synapse" name="deleteQueryJob">
    <parameter name="queryJobId" description="Query Job ID"/>
    <sequence>
        <property name="queryJobId" expression="$func:queryJobId"/>
        <class name="org.wso2.carbon.esb.connector.operations.DeleteQueryJob"/>
        <property name="uri.var.url" expression="get-property('sf_bulk_deleteQueryJobUrl')"/>
        <salesforce_bulkapi_v2.callBulkApi>
            <method>delete</method>
            <url>{uri.var.url}</url>
            <contentType>application/json</contentType>
        </salesforce_bulkapi_v2.callBulkApi>
    </sequence>
</template>
