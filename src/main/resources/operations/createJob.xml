<template xmlns="http://ws.apache.org/ns/synapse" name="createJob">
    <parameter name="operation" description="operation"/>
    <parameter name="object" description="object"/>
    <parameter name="columnDelimiter" description="columnDelimiter"/>
    <parameter name="lineEnding" description="lineEnding"/>
    <parameter name="assignmentRuleId" description="assignmentRuleId"/>
    <parameter name="externalIdFieldName" description="externalIdFieldName"/>
    <sequence>
        <property name="operation" expression="$func:operation"/>
        <property name="object" expression="$func:object"/>
        <property name="columnDelimiter" expression="$func:columnDelimiter"/>
        <property name="lineEnding" expression="$func:lineEnding"/>
        <property name="assignmentRuleId" expression="$func:assignmentRuleId"/>
        <property name="externalIdFieldName" expression="$func:externalIdFieldName"/>
        <class name="org.wso2.carbon.esb.connector.operations.CreateJob"/>
        <property name="uri.var.url" expression="get-property('sf_bulk_createJobUrl')"/>
        <payloadFactory media-type="json">
            <format>$1</format>
            <args>
                <arg evaluator="xml" expression="$ctx:sf_bulk_payload"/>
            </args>
        </payloadFactory>
        <salesforce_bulkapi_v2.callBulkApi>
            <method>post</method>
            <url>{uri.var.url}</url>
            <contentType>application/json</contentType>
        </salesforce_bulkapi_v2.callBulkApi>
    </sequence>
</template>
